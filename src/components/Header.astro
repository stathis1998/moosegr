---
const links: {
  href: string;
  text: string;
}[] = [
  { href: '#home', text: 'Home' },
  { href: '#about', text: 'About' },
  { href: '#services', text: 'Services' },
  { href: '#portfolio', text: 'Portfolio' },
  { href: '#contact', text: 'Contact' },
];
---

<header>
  <nav class="flex justify-around items-center p-4 bg-gray-800 ">
    <img src="/white-text-right.svg" alt="logo" class="w-44" />
    <ul class="flex gap-4">
      {links.map((link) => <li class="hover:underline"><a href={link.href}>{link.text}</a></li>)}
    </ul>
    <button class="px-4 py-2 border hover:bg-white hover:text-gray-700 transition-colors duration-300 easy-in-out">Get Started</button>
  </nav>
</header>